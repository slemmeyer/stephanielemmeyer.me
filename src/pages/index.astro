---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Stephanie Lemmeyer | Generalist Engineer & Tech Cat-of-All-Trades">
  <div class="min-h-[80vh] grid lg:grid-cols-2 gap-12 items-center">
    <div class="order-2 lg:order-1">
      <img
        src="/images/profile.jpg"
        alt="A Siamese cat wearing glasses, sitting at a desk, representing 'Tech Cat-of-All-Trades'."
        class="rounded-2xl shadow-lg w-full max-w-2xl mx-auto transform hover:scale-[1.02] transition-transform duration-300"
        loading="lazy"
        decoding="async"
        width="1024"
        height="1024"
        sizes="(max-width: 768px) 100vw, (max-width: 1536px) 50vw, 1024px"
      />
    </div>
    
    <div class="order-1 lg:order-2 space-y-6">
      <h1 class="text-5xl font-bold text-primary">Stephanie Lemmeyer</h1>
      <h2 class="text-2xl text-secondary">Generalist Engineer | Tech Cat-of-All-Trades</h2>
      <section class="mt-8">
        <h3 class="text-xl font-semibold">Find Me Online</h3>
        <div class="flex items-center gap-3 mt-2">
          <a href="https://github.com/slemmeyer" target="_blank" rel="noopener noreferrer">
            <img src="/images/github.svg" alt="GitHub" class="w-8 h-8 transition-transform duration-200 transform hover:scale-125">
          </a>
          <a href="https://linkedin.com/in/stephanielemmeyer" target="_blank" rel="noopener noreferrer">
            <img src="/images/linkedin.svg" alt="LinkedIn" class="w-8 h-8 transition-transform duration-200 transform hover:scale-125">
          </a>
        </div>
      </section>
      
    </div>
  </div>
</Layout>