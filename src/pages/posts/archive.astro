---
import Layout from '../../layouts/Layout.astro';
import PostCard from '../../components/PostCard.astro';
import { allPosts } from '../../data/posts';

// Sort posts by date
const sortedPosts = [...allPosts].sort((a, b) => 
  new Date(b.date).getTime() - new Date(a.date).getTime()
);

---

<Layout title="Blog Archive | Stephanie Lemmeyer">
  <div class="prose prose-lg max-w-none">
    <h1 class="text-4xl font-bold mb-8 text-primary">Blog Archive</h1>
    
    <div class="mb-8">
      <p class="text-text">A complete collection of all blog posts and articles, sorted by date.</p>
    </div>

    <ul class="space-y-4">
      {sortedPosts.map(post => (
        <PostCard {...post} />
      ))}
    </ul>
  </div>
</Layout>