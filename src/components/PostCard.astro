---
interface Props {
  title: string;
  date: string;
  slug: string;
}

const { title, date, slug } = Astro.props;
---

<li class="flex justify-between items-center bg-white p-4 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 border border-accent/20">
  <a href={`/posts/${slug}`} class="text-lg font-medium text-primary hover:text-secondary transition-colors duration-300">
    {title}
  </a>
  <time class="text-sm text-secondary">{date}</time>
</li>